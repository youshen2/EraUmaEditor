<resources>

    <style name="Theme.EraUmaEditor" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="materialCardViewStyle">@style/Widget.EraUmaEditor.CardView</item>
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
        <item name="android:windowAnimationStyle">@style/CustomWindowAnimations</item>
    </style>

    <style name="Widget.EraUmaEditor.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">0dp</item>
        <item name="android:elevation">0dp</item>

        <item name="strokeColor">?attr/colorSurfaceContainer</item>
        <item name="strokeWidth">2dp</item>

        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="ExpandedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CustomWindowAnimations" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_out</item>

        <item name="android:activityCloseEnterAnimation">@anim/zoom_in_out</item>
        <item name="android:activityCloseExitAnimation">@anim/zoom_out_in</item>
    </style>

    <style name="AboutListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/colorSurfaceContainerLowest</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AboutListItemIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="AboutListItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>
</resources>
